{
  "name": "boost-prompt",
  "publisher": "thinker",
  "displayName": "Boost Prompt",
  "description": "Boosts your prompts by expanding and enhancing them into richer, more powerful inputs.",
  "repository": {
    "type": "git",
    "url": "https://github.com/R35007/boost-prompt-vscode-extension"
  },
  "icon": "resources/icon.png",
  "license": "MIT",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "boost prompt",
    "prompt boost",
    "enhance prompt",
    "prompt engineering",
    "AI tools",
    "copilot chat",
    "prompt editing",
    "VSCode AI",
    "VSCode Copilot"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "boostPrompt.boost",
        "title": "Boost Prompt"
      },
      {
        "command": "boostPrompt.selectModel",
        "title": "Boost Prompt: Select Model",
        "category": "Boost Prompt"
      },
      {
        "command": "boostPrompt.editInstructions",
        "title": "Boost Prompt: Edit Instructions",
        "category": "Boost Prompt"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "boostPrompt.boost",
          "when": "boostPrompt.filePatternMatches && editorTextFocus",
          "group": "1_modification"
        }
      ],
      "editor/title": [
        {
          "command": "boostPrompt.boost",
          "when": "boostPrompt.filePatternMatches && editorTextFocus",
          "group": "navigation@1"
        }
      ]
    },
    "configuration": [
      {
        "title": "Boost Prompt",
        "properties": {
          "boostPrompt.preferredModel": {
            "type": "string",
            "default": "",
            "description": "Preferred language model for boosting prompts. Leave empty to select on each boost."
          },
          "boostPrompt.filePatterns": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "*.prompt.md"
            ],
            "description": "Array of glob patterns for files to enable Boost Prompt on. Examples: *.prompt.md, *.md, **/*.mdx"
          }
        }
      }
    ],
    "languageModelTools": [
      {
        "name": "boostPrompt",
        "tags": [
          "prompt",
          "editing",
          "tools"
        ],
        "toolReferenceName": "boostPrompt",
        "displayName": "Boost Prompt Tools",
        "modelDescription": "Boost the quality of your prompts",
        "canBeReferencedInPrompt": true,
        "inputSchema": {
          "type": "object",
          "properties": {
            "promptText": {
              "type": "string",
              "description": "The prompt text to improve"
            }
          },
          "required": [
            "promptText"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.89.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "minimatch": "^10.2.0"
  }
}
